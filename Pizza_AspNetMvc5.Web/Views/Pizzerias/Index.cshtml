@model IEnumerable<Pizza_AspNetMvc5.Data.Pizzeria>

@{
    ViewBag.Title = "Index";
}

<h2>We have @Model.Count() pizzerias.</h2>

<h2>Cards with pizzerias</h2>

<div class="py-5">
    <div class="container">
        <div class="row hidden-md-up">
            @foreach (var item in Model)
            {<div class="col-md-4">
                 <div class="card">
                     <img class="card-img-top" src="Content/Images/pizza.jpg" alt="Card image cap">
                     <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                     <h6 class="card-subtitle text-muted">@Html.DisplayFor(modelItem => item.Location)</h6>
                     <p class="card-text p-y-1">@Html.DisplayFor(modelItem => item.Type)</p>
                     @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                     @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                     @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                 </div>
                    </div>
            }

            </div>
        </div>
    </div>

    <h2>Listed pizzerias</h2>

    <p>
        @Html.ActionLink("Add New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

@section footer {
    <div>
        <p>Footer</p>
    </div>
    }